{
    "manifest_version": 2,
    "name": "Ganbeach Bookmarker",
    "version": "0.1.0",
    "description": "Ganbeach Bookmarker",
    "background": {
        "page": "html/background.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "bookmarker@ganbeach.com"
        }
    },
    "permissions": [
        "activeTab",
        "tabs",
        "cookies",
        "bookmarks",
        "notifications",
        "history",
        "https://ganbeach.com/",
        "https://user.ganbeach.com/",
        "https://bookmark.ganbeach.com/"
    ],
    "commands": {
        "open-popup": {
            "suggested_key": {
                "default": "Ctrl+Shift+L",
                "windows": "Ctrl+Shift+L",
                "mac": "Command+Shift+L"
            },
            "description": "Open the popup"
        }
    },
    "browser_action": {
        "default_title": "ganbeach-bookmarker"
    },
    "icons": {
        "16": "icons/rounded/logo.svg",
        "48": "icons/rounded/logo.svg",
        "96": "icons/rounded/logo.svg",
        "128": "icons/rounded/logo.svg"
    },
    "content_security_policy": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
}